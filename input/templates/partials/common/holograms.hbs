 <div class="holograms">
      <button id="holograms-open-btn" class="hidden-xs holograms-btn">
          <div class="holograms-number">{{#if hololist}}{{hololist.quantity}}{{else}}0{{/if}}</div>
      </button>
      <div class="holograms-items hidden">
          <p class="holograms-title">
            {{i18n "catalog:holograms.title"}} <span>({{#if hololist}}{{hololist.quantity}}{{else}}0{{/if}})</span>
          </p>
          <span class="recently-added-title">{{i18n "catalog:holograms.recentlyAdded"}}</span>
          <div class="clearfix">
            {{#each hololist.list}}
                <a href="{{url}}">
                    <img class="pull-left img-responsive holograms-img" src="{{imageUrl}}" alt="{{name}}">
                </a>
            {{/each}}
          </div>
          <a href="{{@root.meta._links.myHololist.href}}" id="holograms-view-btn" class="btn view-holograms-btn">
              {{i18n "catalog:holograms.view"}}
          </a>
      </div>
  </div>

